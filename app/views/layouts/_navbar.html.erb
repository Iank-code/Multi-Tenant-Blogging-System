<div class="flex gap-6 shadow-lg pt-6">
    <%= link_to 'Home', root_path, class: 'text-blue-500' %>
    <% if current_organisation %>
        <div class="flex gap-4">
            <% if current_organisation.role == "organisation" %>
                <%= link_to "Create Admin", new_blog_path %>
            <% end %>
            
            <%= button_to 'Logout', destroy_organisation_session_path, :method => :delete, data: { confirm: 'Are you sure you want to log out?' }, class: 'hover:text-blue-500' %>
        </div>
    <% else %>

        <div class="flex gap-8">
            <%= link_to 'Login', new_user_session_path, class: 'hover:text-blue-500' %>
            <%= link_to 'For Organisations', new_organisation_session_path, class: 'hover:text-blue-500' %>
        </div>
    <% end %>
</div>