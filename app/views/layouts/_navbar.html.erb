<div class="flex mb-[2em] gap-6">
    <%= link_to 'Home', root_path, class: 'link' %>
    <% if current_organisation %>
        <div>
            <%= current_organisation.email %>
            <%= button_to 'Logout', destroy_organisation_session_path, :method => :delete, data: { confirm: 'Are you sure you want to log out?' } %>
        </div>
    <% else %>

        <div class="flex gap-8">
            <%= link_to 'Login', new_user_session_path, class: 'link' %>
            <%= link_to 'For Organisations', new_organisation_session_path, class: 'link hover:txt-blue-500' %>
        </div>
    <% end %>
</div>